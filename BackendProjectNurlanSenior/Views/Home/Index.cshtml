<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/assets/img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <div class="row">
           
            @foreach (Blog item in Model.Blogs.OrderByDescending(b => b.Id).Take(3))
            {
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="single-blog mt-60 mb-60">
                        <div class="blog-img">
                            <a asp-controller="blog" asp-action="details" asp-route-id="@item.Id"><img style="height:250px" src="~/assets/img/blog/@item.Image" alt="blog"></a>
                            <div class="blog-hover">
                                <i class="fa fa-link"></i>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>By @item.Author  /  @item.CreatedTime.ToString("dd MMMM yyyy")  /  <i class="fa fa-comments-o"></i> @item.Comments.Where(c => c.IsAccepted == true).Count()</p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a asp-controller="blog" asp-action="details" asp-route-id="@item.Id">@item.Name</a></h2>
                                <a asp-controller="blog" asp-action="details" asp-route-id="@item.Id">read more</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>





<!-- Blog Area End -->
