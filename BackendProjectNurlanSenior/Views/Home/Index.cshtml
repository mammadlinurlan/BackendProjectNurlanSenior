<!-- Event Area Start -->
<div class="event-area two text-center pt-100 pb-145">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/assets/img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">


            <div class="col-md-12 col-sm-12 col-xs-12">
                @foreach (Event item in Model.Events.OrderByDescending(e => e.DayMonth).Take(2))
                {
                    <div class="col-md-6">
                        <div class="single-event mb-35">
                            <div class="event-img">
                                <a asp-controller="event" asp-action="details" asp-route-id="@item.Id"><img style="width:365px;height:250px" src="~/assets/img/event/@item.Image" alt="event"></a>
                            </div>
                            <div style="height:250px" class="event-content text-left">
                                <h3>@item.DayMonth.ToString("dd")  @item.DayMonth.ToString("MMMM")</h3>
                                <h4><a asp-controller="event" asp-action="details" asp-route-id="@item.Id">ADVANCE PHP WORKSHOP</a></h4>
                                <ul>
                                    <li><i class="fa fa-clock-o"></i>@item.StartTime.ToString("HH:mm") - @item.EndTime.ToString("HH:mm")</li>
                                    <li><i class="fa fa-map-marker"></i>@item.Venue</li>
                                </ul>
                                <div  class="event-content-right">
                                    <a class="default-btn" asp-controller="event" asp-action="details" asp-route-id="@item.Id">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>

                }


            </div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                @foreach (Event item in Model.Events.OrderByDescending(e => e.DayMonth).Skip(2).Take(2))
                {
                    <div class="col-md-6">
                        <div class="single-event mb-35">
                            <div class="event-img">
                                <a asp-controller="event" asp-action="details" asp-route-id="@item.Id"><img style="width:365px;height:250px" src="~/assets/img/event/@item.Image" alt="event"></a>
                            </div>
                            <div style="height:250px" class="event-content text-left">
                                <h3>@item.DayMonth.ToString("dd")  @item.DayMonth.ToString("MMMM")</h3>
                                <h4><a asp-controller="event" asp-action="details" asp-route-id="@item.Id">ADVANCE PHP WORKSHOP</a></h4>
                                <ul>
                                    <li><i class="fa fa-clock-o"></i>@item.StartTime.ToString("HH:mm") - @item.EndTime.ToString("HH:mm")</li>
                                    <li><i class="fa fa-map-marker"></i>@item.Venue</li>
                                </ul>
                                <div  class="event-content-right">
                                    <a class="default-btn" asp-controller="event" asp-action="details" asp-route-id="@item.Id">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>

                }


            </div>

        </div>
    </div>
</div>
<!-- Event Area End -->
