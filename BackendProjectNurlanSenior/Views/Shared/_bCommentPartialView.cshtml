@model BlogVM
@foreach (Comment item in Model.Blog.Comments)
{
    if (item.IsAccepted == true)
    {
        <div id="commentdiv">
            <h5>@item.AppUser.Fullname</h5>
            <span>@item.CreatedTime</span>

            <span><strong>@item.Subject</strong></span>
            <br />
            <input type="hidden" value="@item.Id" id="hiddenId" />
            <p>@item.Message</p>
            @if (item.AppUser.UserName == User.Identity.Name)
            {
                <a asp-controller="blog" asp-action="DeleteComment" asp-route-id="@item.Id"  style="text-decoration:none" class="text text-danger deleteCmt">DELETE</a>
            }

        </div>

    }

}
