@model BlogVM

@foreach (Blog item in Model.Blogs)
{
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="single-blog mb-60">
            <div class="blog-img">
                <a asp-controller="blog" asp-action="details" asp-route-id="@item.Id"><img src="~/assets/img/blog/@item.Image" alt="blog"></a>
                <div class="blog-hover">
                    <i class="fa fa-link"></i>
                </div>
            </div>
            <div class="blog-content">
                <div class="blog-top">
                    <p>By @item.Author  /  @item.CreatedTime.ToString("dd MMMM yyyy")  /  <i class="fa fa-comments-o"></i> @item.Comments.Count()</p>
                </div>
                <div class="blog-bottom">
                    <h2><a asp-controller="blog" asp-action="details" asp-route-id="@item.Id" >@item.Name</a></h2>
                    <a asp-controller="blog" asp-action="details" asp-route-id="@item.Id">read more</a>
                </div>
            </div>
        </div>
    </div>

}