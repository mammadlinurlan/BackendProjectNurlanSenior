@model ContactVM
@{
    ViewData["Title"] = "Index";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>contact</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Contact Start -->
<div class="map-area">
    <!-- google-map-area start -->
    <div class="google-map-area">
        <!--  Map Section -->
        <div id="contacts" class="map-area">
            <div id="googleMap" style="width:100%;height:440px;"></div>
        </div>
    </div>
</div>
<div class="contact-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="contact-contents text-center">
                    <div class="single-contact mb-65">
                        <div style="display:flex;align-items:center;justify-content:center" class="contact-icon">
                            @*<img src="~/assets/img/contact/@Model.Contact.AdressLogo" alt="contact">
                                *@

                            <i style="font-size:40px" class="@Model.Contact.AdressLogo"></i>
                        </div>
                        <div class="contact-add">
                            <h3>Address</h3>
                            <p>@Model.Contact.Address</p>
                            
                        </div>
                    </div>
                    <div class="single-contact mb-65">
                        <div style="display:flex;align-items:center;justify-content:center" class="contact-icon">
                            @*<img src="~/assets/img/contact/@Model.Contact.PhoneLogo" alt="contact">
                                *@

                            <i style="font-size:40px" class="@Model.Contact.PhoneLogo"></i>
                        </div>
                        <div class="contact-add">
                            <h3>Phone</h3>
                            <p>@Model.Contact.Phone</p>
                           
                        </div>
                    </div>
                    <div class="single-contact">
                        <div style="display:flex;align-items:center;justify-content:center" class="contact-icon">
                            @*<img src="~/assets/img/contact/@Model.Contact.CountryLogo" alt="contact">
                                
                                *@

                            <i style="font-size:40px" class="@Model.Contact.CountryLogo"></i>
                        </div>
                        <div class="contact-add">
                            <h3>Country</h3>
                            <p>@Model.Contact.Country</p>
                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="reply-area">
                    <h3>LEAVE A message</h3>
                    <p>@Model.Contact.LeaveReply</p>
                    <form asp-action="Index" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <p>Name</p>
                                <input asp-for="@Model.ContactMessages.FirstOrDefault().Name"><br />
                                <span asp-validation-for="@Model.ContactMessages.FirstOrDefault().Name" class="text text-danger"></span>

                            </div>
                            <div class="col-md-12">
                                <p>Email</p>
                                <input asp-for="@Model.ContactMessages.FirstOrDefault().Email"><br />
                                <span asp-validation-for="@Model.ContactMessages.FirstOrDefault().Email" class="text text-danger"></span>


                            </div>
                            <div class="col-md-12">
                                <p>Subject</p>
                                <input asp-for="@Model.ContactMessages.FirstOrDefault().Subject"><br />
                                <span asp-validation-for="@Model.ContactMessages.FirstOrDefault().Subject" class="text text-danger"></span>

                                <p>Massage</p>
                                <textarea asp-for="@Model.ContactMessages.FirstOrDefault().Message" cols="20" rows="10"></textarea><br />
                                <span asp-validation-for="@Model.ContactMessages.FirstOrDefault().Message" class="text text-danger"></span>

                            </div>
                        </div>
                        <button style="background-color:blanchedalmond;padding:10px 10px" type="submit">Send message</button>
                        <p class="form-messege"></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDSLSFRa0DyBj9VGzT7GM6SFbSMcG0YNBM"></script>
    <script type="text/javascript">
