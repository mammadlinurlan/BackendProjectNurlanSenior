@model AccountVM
@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Forgot password?</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Forgot password?</h2>
                            <span>Please enter your email to get reset link.</span>
                        </div>
                        <div class="login-form">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

                            <form method="post">
                                <input asp-for="AppUser.Email" placeholder="Enter your email"><br />
                                <span asp-validation-for="AppUser.Email" class="text text-danger"></span>


                                
                                    <button type="submit" class="default-btn">Send email</button>
                                
                            </form>
                       
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

