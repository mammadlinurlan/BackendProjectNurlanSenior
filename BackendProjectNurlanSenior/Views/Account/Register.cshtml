@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <form  method="post">
                                <input asp-for="Fullname" placeholder="Fullname"><br />
                                <span asp-validation-for="Fullname" class="text text-danger"></span>

                                <input asp-for="Username" placeholder="Username"><br />
                                <span asp-validation-for="Username" class="text text-danger"></span>

                                <input asp-for="Password" placeholder="Password"><br />
                                <span asp-validation-for="Password" class="text text-danger"></span>

                                <input asp-for="ConfirmPassword" placeholder="Confirm password"><br />
                                <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>

                                <input asp-for="Email" placeholder="Email"><br />
                                <span asp-validation-for="Email" class="text text-danger"></span>



                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input  asp-for="TermsAndConditions">
                                        <label for="remember">I agree with terms</label>
                                        <span asp-validation-for="TermsAndConditions" class="text text-danger"></span>


                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->
<!-- Subscribe Start -->

